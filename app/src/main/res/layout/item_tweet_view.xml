<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <EditText
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:background="@drawable/tweet_border"
            android:gravity="top"
            android:padding="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_small">

            <TextView
                android:id="@+id/count"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000"
                tools:text="140" />

            <LinearLayout
                android:id="@+id/actions"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|end">

                <ImageView
                    android:id="@+id/copy"
                    android:layout_width="@dimen/icon_small"
                    android:layout_height="@dimen/icon_small"
                    android:background="@drawable/ripple"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/ic_content_copy_black_24px" />

                <android.support.v4.widget.Space
                    android:layout_width="@dimen/margin_normal"
                    android:layout_height="0px" />

                <ImageView
                    android:id="@+id/less"
                    android:layout_width="@dimen/icon_small"
                    android:layout_height="@dimen/icon_small"
                    android:background="@drawable/ripple"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/ic_remove_black_24px" />

                <android.support.v4.widget.Space
                    android:layout_width="@dimen/margin_normal"
                    android:layout_height="0px" />

                <ImageView
                    android:id="@+id/more"
                    android:layout_width="@dimen/icon_small"
                    android:layout_height="@dimen/icon_small"
                    android:background="@drawable/ripple"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/ic_add_black_24px" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>